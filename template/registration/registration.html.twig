{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="container post">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2">
            <form id="contactForm" method="post" action="index.php?action=registrationSubmitted">
                
                <h3>Registration</h3>

                <div class="row control-group">
                    <div class="form-group col-xs-12 floating-label-form-group controls">
                        <label>Pseudo</label>
                        <input rows="5" class="form-control" type="text" id="pseudo" name="pseudo" placeholder="Enter your pseudo" name="pseudo" required><br>
                    </div>
                </div>

                <div class="row control-group">
                  <div class="form-group col-xs-12 floating-label-form-group controls">
                      <label>Name</label>
                      <input rows="5" class="form-control" type="text" id="name" name="name" placeholder="Enter your name" required><br>
                  </div>
                </div>

                <div class="row control-group">
                  <div class="form-group col-xs-12 floating-label-form-group controls">
                      <label>Firstname</label>
                      <input rows="5" class="form-control" type="text" id="firstname" name="firstname" placeholder="Enter your firstname" required><br>
                  </div>
                </div>

                <div class="row control-group">
                  <div class="form-group col-xs-12 floating-label-form-group controls">
                      <label>Email</label>
                      <input rows="5" class="form-control" type="email" id="email" name="email" placeholder="Enter your email" required><br>
                  </div>
                </div>

                <div class="row control-group">
                  <div class="form-group col-xs-12 floating-label-form-group controls">
                      <label>Password</label>
                      <input rows="5" class="form-control" type="password" id="password" name="password" placeholder="Enter your password" required><br>
                  </div>
                </div>
                <br>
                <div class="row">
                    <div class="form-group col-xs-12">
                        <input type="submit" class="btn btn-success btn-lg" value="Register">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

{% endblock %}