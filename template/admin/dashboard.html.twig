{% extends 'base.html.twig' %}

{% block title %}Espace Administration{% endblock %}

{% block body %}
  <h1 class="admin-title">Espace Administration</h1>

  <a href="" type="button" class="btn btn-success">Add new post</a>

  <table class="table table-dark table-striped admin-tab">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Title</th>
      <th scope="col">Created at</th>
      <th scope="col">Last update</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    {% for post in posts %}
    <tr>
      <th scope="row">{{ post.id }}</th>
      <td>{{ post.title }}</td>
      <td>{{ post.createdAt }}</td>
      <td>{{ post.updatedAt }}</td>
      <td>
          <a href="index.php?action=article&amp;id={{post.id}}" type="button" class="btn btn-info">Show</a>
          <a href="" type="button" class="btn btn-warning">Edit</a>
          <a href="" type="button" class="btn btn-danger">Delete</a>
      </td>
    </tr>
    {% endfor %}
  </tbody>
</table>
{% endblock %}