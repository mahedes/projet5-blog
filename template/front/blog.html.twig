{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
<section id="portfolio">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>Blog</h2>
                <hr class="star-primary">
            </div>
        </div>
        <div class="row blog-column">
            {% for post in posts %}
            <div class="col-sm-4 portfolio-item">
                <a href="index.php?action=article&amp;id={{post.id}}" class="portfolio-link" data-toggle="modal">
                    <div class="caption">
                        <div class="caption-content">
                            <i class="fa fa-eye fa-3x"></i>
                        </div>
                    </div>
                    <img src="img/portfolio/circus.png" class="img-responsive" alt="">

                </a>
                                    
                    <h3>{{ post.title }}</h3>
                    <ul class="list-inline item-details">
                        <li>Created at:
                            <strong><a href="#">{{ post.createdAt|date("m/d/Y \\a\\t g:ia") }}</a>
                            </strong>
                        </li>
                        <li>Updated at:
                            <strong><a href="#">{{ post.updatedAt|date("m/d/Y \\a\\t g:ia") }}</a>
                            </strong>
                        </li>
                    </ul>
                    <p>{{ post.chapo }}</p>
                    <a href="index.php?action=article&amp;id={{post.id}}"> >> Voir l'article</a>
            </div>
            {% endfor %}   
        </div>
    </div>
</section>
{% endblock %}
